{
  "name": "zennpad",
  "displayName": "ZennPad",
  "publisher": "ackkerman",
  "description": "VS Code extension scaffold for editing Zenn content directly from the sidebar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zennPad",
          "title": "ZennPad",
          "icon": "media/logo-only-white.svg"
        }
      ]
    },
    "views": {
      "zennPad": [
        {
          "id": "zennPadExplorer",
          "name": "ZennPad",
          "icon": "media/logo-only.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "zennpad.refresh",
          "when": "view == zennPadExplorer",
          "group": "navigation@0",
          "icon": {
            "light": "media/icon/reload-light.svg",
            "dark": "media/icon/reload-dark.svg"
          }
        },
        {
          "command": "zennpad.authHelp",
          "when": "view == zennPadExplorer",
          "group": "navigation@1",
          "icon": {
            "light": "media/icon/settings-light.svg",
            "dark": "media/icon/settings-dark.svg"
          }
        }
      ],
      "editor/title": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "zennpad.publish",
          "when": "view == zennPadExplorer && viewItem == article:draft",
          "group": "inline"
        },
        {
          "command": "zennpad.openOnZenn",
          "when": "view == zennPadExplorer && viewItem == article:published",
          "group": "inline"
        },
        {
          "command": "zennpad.newArticle",
          "when": "view == zennPadExplorer && viewItem == articles",
          "group": "inline"
        },
        {
          "command": "zennpad.newArticle",
          "when": "view == zennPadExplorer && viewItem == drafts",
          "group": "inline"
        },
        {
          "command": "zennpad.newArticle",
          "when": "view == zennPadExplorer && viewItem == articles",
          "group": "navigation@0"
        },
        {
          "command": "zennpad.openZennRoot",
          "when": "view == zennPadExplorer && (viewItem == articles || viewItem == drafts)",
          "group": "navigation@1"
        },
        {
          "command": "zennpad.openGithubRoot",
          "when": "view == zennPadExplorer && (viewItem == articles || viewItem == drafts)",
          "group": "navigation@1"
        },
        {
          "command": "zennpad.copyZennUrl",
          "when": "view == zennPadExplorer && (viewItem == article:draft || viewItem == article:published || viewItem == chapter)",
          "group": "navigation@1"
        },
        {
          "command": "zennpad.copyGithubUrl",
          "when": "view == zennPadExplorer && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "navigation@1"
        },
        {
          "command": "zennpad.copyPath",
          "when": "view == zennPadExplorer && viewItem == image",
          "group": "navigation@1"
        },
        {
          "command": "zennpad.copyRelativePath",
          "when": "view == zennPadExplorer && viewItem == image",
          "group": "navigation@1"
        },
        {
          "command": "zennpad.publish",
          "when": "view == zennPadExplorer && viewItem == article:draft",
          "group": "navigation@2"
        },
        {
          "command": "zennpad.unpublish",
          "when": "view == zennPadExplorer && viewItem == article:published",
          "group": "navigation@2"
        },
        {
          "command": "zennpad.renameNode",
          "when": "view == zennPadExplorer && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "navigation@3"
        },
        {
          "command": "zennpad.duplicateNode",
          "when": "view == zennPadExplorer && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "navigation@3"
        },
        {
          "command": "zennpad.deleteNode",
          "when": "view == zennPadExplorer && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "navigation@4"
        }
      ]
    },
    "configuration": {
      "title": "ZennPad",
      "properties": {
        "zennpad.githubOwner": {
          "type": "string",
          "default": "",
          "description": "GitHub owner (user or organization) for Zenn repository"
        },
        "zennpad.githubRepo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name for Zenn content"
        },
        "zennpad.githubBranch": {
          "type": "string",
          "default": "main",
          "description": "Branch name to sync with Zenn"
        },
        "zennpad.workBranch": {
          "type": "string",
          "default": "zenn-work",
          "description": "Work branch for auto sync before deploying to main"
        }
      }
    },
    "commands": [
      {
        "command": "zennpad.newArticle",
        "title": "ZennPad: New Article",
        "icon": {
          "light": "media/icon/plus-light.svg",
          "dark": "media/icon/plus-dark.svg"
        }
      },
      {
        "command": "zennpad.publish",
        "title": "ZennPad: Publish Article",
        "icon": {
          "light": "media/icon/publish-light.svg",
          "dark": "media/icon/publish-dark.svg"
        }
      },
      {
        "command": "zennpad.unpublish",
        "title": "ZennPad: Unpublish Article",
        "icon": {
          "light": "media/icon/unpublish-light.svg",
          "dark": "media/icon/unpublish-dark.svg"
        }
      },
      {
        "command": "zennpad.openOnZenn",
        "title": "ZennPad: Open on Zenn",
        "icon": "media/logo-only.svg"
      },
      {
        "command": "zennpad.preview",
        "title": "ZennPad: Preview",
        "icon": {
          "light": "media/icon/preview-light.svg",
          "dark": "media/icon/preview-dark.svg"
        }
      },
      {
        "command": "zennpad.signIn",
        "title": "ZennPad: Sign in to GitHub",
        "icon": {
          "light": "media/icon/github-light.svg",
          "dark": "media/icon/github-dark.svg"
        }
      },
      {
        "command": "zennpad.signOut",
        "title": "ZennPad: Sign out of GitHub",
        "icon": {
          "light": "media/icon/signout-light.svg",
          "dark": "media/icon/signout-dark.svg"
        }
      },
      {
        "command": "zennpad.authHelp",
        "title": "ZennPad: Settings",
        "icon": {
          "light": "media/icon/settings-light.svg",
          "dark": "media/icon/settings-dark.svg"
        }
      },
      {
        "command": "zennpad.chooseRepo",
        "title": "ZennPad: Choose GitHub Repository"
      },
      {
        "command": "zennpad.refresh",
        "title": "ZennPad: Refresh",
        "icon": {
          "light": "media/icon/refresh-light.svg",
          "dark": "media/icon/refresh-dark.svg"
        }
      },
      {
        "command": "zennpad.openZennRoot",
        "title": "ZennPad: Open Zenn Home"
      },
      {
        "command": "zennpad.openGithubRoot",
        "title": "ZennPad: Open GitHub Repo"
      },
      {
        "command": "zennpad.copyZennUrl",
        "title": "ZennPad: Copy Zenn URL"
      },
      {
        "command": "zennpad.copyGithubUrl",
        "title": "ZennPad: Copy GitHub URL"
      },
      {
        "command": "zennpad.renameNode",
        "title": "ZennPad: Rename"
      },
      {
        "command": "zennpad.duplicateNode",
        "title": "ZennPad: Duplicate"
      },
      {
        "command": "zennpad.deleteNode",
        "title": "ZennPad: Delete"
      },
      {
        "command": "zennpad.insertImageFromFile",
        "title": "ZennPad: Insert Image from File"
      },
      {
        "command": "zennpad.flushPendingSync",
        "title": "ZennPad: Flush Pending Sync"
      },
      {
        "command": "zennpad.deployToZenn",
        "title": "ZennPad: Deploy Pending Changes to Zenn"
      },
      {
        "command": "zennpad.toggleAutoSync",
        "title": "ZennPad: Pause/Resume Auto Sync"
      },
      {
        "command": "zennpad.copyPath",
        "title": "ZennPad: Copy Path"
      },
      {
        "command": "zennpad.copyRelativePath",
        "title": "ZennPad: Copy Relative Path"
      },
      {
        "command": "zennpad.sortArticlesByDate",
        "title": "ZennPad: Sort Articles by Date",
        "icon": {
          "light": "media/icon/sort-by-date-light.svg",
          "dark": "media/icon/sort-by-date-dark.svg"
        }
      },
      {
        "command": "zennpad.sortArticlesByTitle",
        "title": "ZennPad: Sort Articles by Title",
        "icon": {
          "light": "media/icon/sort-by-title-light.svg",
          "dark": "media/icon/sort-by-title-dark.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node --test out/__tests__/*.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{src,docs}/**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.85.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "get-port": "^7.1.0",
    "http-proxy": "^1.18.1",
    "which": "^6.0.0",
    "yaml": "^2.8.2"
  }
}
