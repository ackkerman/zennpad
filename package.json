{
  "name": "zennpad",
  "displayName": "ZennPad",
  "publisher": "ackkerman",
  "description": "VS Code extension scaffold for editing Zenn content directly from the sidebar.",
  "icon": "media/logo/zennpad_icon_transparent_128.png",
  "version": "0.0.1",
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zennPad",
          "title": "ZennPad",
          "icon": "media/logo-only-white.svg"
        }
      ]
    },
    "views": {
      "zennPad": [
        {
          "id": "zennpad.actions",
          "name": "Actions",
          "icon": "media/icon/sparcle.svg",
          "type": "webview",
          "visibility": "visible"
        },
        {
          "id": "zennpad.repos",
          "name": "Repositories",
          "icon": "media/logo-only.svg",
          "type": "tree",
          "visibility": "visible"
        },
        {
          "id": "zennpad.search",
          "name": "Search",
          "icon": "media/icon/search.svg",
          "type": "webview",
          "visibility": "collapsed"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "zennpad.refresh",
          "when": "view == zennpad.repos",
          "group": "navigation@0",
          "icon": {
            "light": "media/icon/reload-light.svg",
            "dark": "media/icon/reload-dark.svg"
          }
        },
        {
          "command": "zennpad.pauseAutoSync",
          "when": "view == zennpad.repos && (!zennpad.autoSyncPaused || zennpad.autoSyncPaused == false)",
          "group": "navigation@1",
          "icon": {
            "light": "media/icon/sync-off-light.svg",
            "dark": "media/icon/sync-off-dark.svg"
          }
        },
        {
          "command": "zennpad.resumeAutoSync",
          "when": "view == zennpad.repos && zennpad.autoSyncPaused == true",
          "group": "navigation@1",
          "icon": {
            "light": "media/icon/sync-on-light.svg",
            "dark": "media/icon/sync-on-dark.svg"
          }
        },
        {
          "command": "zennpad.sortArticlesByTitle",
          "when": "view == zennpad.repos && zennpad.sortOrder == 'date'",
          "group": "navigation@2",
          "icon": {
            "light": "media/icon/sort-by-date-light.svg",
            "dark": "media/icon/sort-by-date-dark.svg"
          }
        },
        {
          "command": "zennpad.sortArticlesByDate",
          "when": "view == zennpad.repos && zennpad.sortOrder == 'title'",
          "group": "navigation@2",
          "icon": {
            "light": "media/icon/sort-by-title-light.svg",
            "dark": "media/icon/sort-by-title-dark.svg"
          }
        },
        {
          "command": "zennpad.deployToZenn",
          "when": "view == zennpad.repos && zennpad.hasRepoConfig",
          "group": "navigation@3",
          "icon": {
            "light": "media/icon/publish-light.svg",
            "dark": "media/icon/publish-dark.svg"
          }
        },
        {
          "command": "zennpad.openSettingsPanel",
          "when": "view == zennpad.repos",
          "group": "navigation@4",
          "icon": {
            "light": "media/icon/settings-light.svg",
            "dark": "media/icon/settings-dark.svg"
          }
        }
      ],
      "editor/title": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        },
        {
          "command": "zennpad.openOnZenn",
          "when": "zennpad.activeDocPublished",
          "group": "navigation@1"
        }
      ],
      "editor/title/context": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "zennpad.contextCaption",
          "when": "zennpad.activeDocIsZenn",
          "group": "zennpad@-1"
        },
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "zennpad@0"
        },
        {
          "command": "zennpad.insertImageFromFile",
          "when": "zennpad.activeDocIsZenn && editorLangId == markdown",
          "group": "zennpad@0"
        },
        {
          "command": "zennpad.publish",
          "when": "zennpad.activeDocDraft",
          "group": "zennpad@1"
        },
        {
          "command": "zennpad.unpublish",
          "when": "zennpad.activeDocPublished",
          "group": "zennpad@1"
        },
        {
          "command": "zennpad.deployToZenn",
          "when": "zennpad.hasRepoConfig",
          "group": "zennpad@2"
        },
        {
          "command": "zennpad.openInGithub",
          "when": "zennpad.activeDocIsZenn",
          "group": "zennpad@3"
        },
        {
          "command": "zennpad.openOnZenn",
          "when": "zennpad.activeDocPublished",
          "group": "zennpad@3"
        }
      ],
      "commandPalette": [
        {
          "command": "zennpad.contextCaption",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "zennpad.publish",
          "when": "view == zennpad.repos && viewItem == article:draft",
          "group": "inline"
        },
        {
          "command": "zennpad.openOnZenn",
          "when": "view == zennpad.repos && viewItem == article:published",
          "group": "inline"
        },
        {
          "command": "zennpad.newArticle",
          "when": "view == zennpad.repos && (viewItem == articles || viewItem == drafts)",
          "group": "z-create@0"
        },
        {
          "command": "zennpad.openZennRoot",
          "when": "view == zennpad.repos && (viewItem == articles || viewItem == drafts)",
          "group": "z-open@1"
        },
        {
          "command": "zennpad.openGithubRoot",
          "when": "view == zennpad.repos && (viewItem == articles || viewItem == drafts)",
          "group": "z-open@1"
        },
        {
          "command": "zennpad.copyZennUrl",
          "when": "view == zennpad.repos && (viewItem == article:draft || viewItem == article:published || viewItem == chapter)",
          "group": "z-copy@2"
        },
        {
          "command": "zennpad.copyGithubUrl",
          "when": "view == zennpad.repos && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "z-copy@2"
        },
        {
          "command": "zennpad.copyPath",
          "when": "view == zennpad.repos && viewItem == image",
          "group": "z-copy@2"
        },
        {
          "command": "zennpad.copyRelativePath",
          "when": "view == zennpad.repos && viewItem == image",
          "group": "z-copy@2"
        },
        {
          "command": "zennpad.publish",
          "when": "view == zennpad.repos && viewItem == article:draft",
          "group": "z-publish@3"
        },
        {
          "command": "zennpad.unpublish",
          "when": "view == zennpad.repos && viewItem == article:published",
          "group": "z-publish@3"
        },
        {
          "command": "zennpad.renameNode",
          "when": "view == zennpad.repos && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "z-edit@4"
        },
        {
          "command": "zennpad.duplicateNode",
          "when": "view == zennpad.repos && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "z-edit@4"
        },
        {
          "command": "zennpad.deleteNode",
          "when": "view == zennpad.repos && (viewItem == article:draft || viewItem == article:published || viewItem == chapter || viewItem == image)",
          "group": "z-edit@5"
        }
      ]
    },
    "configuration": {
      "title": "ZennPad",
      "properties": {
        "zennpad.githubOwner": {
          "type": "string",
          "default": "",
          "description": "GitHub owner (user or organization) for Zenn repository"
        },
        "zennpad.githubRepo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name for Zenn content"
        },
        "zennpad.githubBranch": {
          "type": "string",
          "default": "main",
          "description": "Main branch name to deploy Zenn content"
        },
        "zennpad.workBranch": {
          "type": "string",
          "default": "zenn-work",
          "description": "Work branch for auto sync before deploying to main"
        },
        "zennpad.zennAccount": {
          "type": "string",
          "default": "",
          "description": "Optional Zenn account (zenn.dev/{username}); fallback to githubOwner when empty"
        }
      }
    },
    "commands": [
      {
        "command": "zennpad.contextCaption",
        "title": "%command.zennpad.contextCaption%",
        "enablement": "false",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.newArticle",
        "title": "%command.zennpad.newArticle%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/plus-light.svg",
          "dark": "media/icon/plus-dark.svg"
        }
      },
      {
        "command": "zennpad.publish",
        "title": "%command.zennpad.publish%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/publish-light.svg",
          "dark": "media/icon/publish-dark.svg"
        }
      },
      {
        "command": "zennpad.unpublish",
        "title": "%command.zennpad.unpublish%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/unpublish-light.svg",
          "dark": "media/icon/unpublish-dark.svg"
        }
      },
      {
        "command": "zennpad.openOnZenn",
        "title": "%command.zennpad.openOnZenn%",
        "category": "ZennPad",
        "icon": "media/logo-only.svg"
      },
      {
        "command": "zennpad.preview",
        "title": "%command.zennpad.preview%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/preview-light.svg",
          "dark": "media/icon/preview-dark.svg"
        }
      },
      {
        "command": "zennpad.signIn",
        "title": "%command.zennpad.signIn%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/github-light.svg",
          "dark": "media/icon/github-dark.svg"
        }
      },
      {
        "command": "zennpad.signOut",
        "title": "%command.zennpad.signOut%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/signout-light.svg",
          "dark": "media/icon/signout-dark.svg"
        }
      },
      {
        "command": "zennpad.authHelp",
        "title": "%command.zennpad.authHelp%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/settings-light.svg",
          "dark": "media/icon/settings-dark.svg"
        }
      },
      {
        "command": "zennpad.openSettingsPanel",
        "title": "%command.zennpad.openSettingsPanel%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/settings-light.svg",
          "dark": "media/icon/settings-dark.svg"
        }
      },
      {
        "command": "zennpad.chooseRepo",
        "title": "%command.zennpad.chooseRepo%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.refresh",
        "title": "%command.zennpad.refresh%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/refresh-light.svg",
          "dark": "media/icon/refresh-dark.svg"
        }
      },
      {
        "command": "zennpad.openZennRoot",
        "title": "%command.zennpad.openZennRoot%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.openGithubRoot",
        "title": "%command.zennpad.openGithubRoot%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.copyZennUrl",
        "title": "%command.zennpad.copyZennUrl%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.copyGithubUrl",
        "title": "%command.zennpad.copyGithubUrl%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.openInGithub",
        "title": "%command.zennpad.openInGithub%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/github-light.svg",
          "dark": "media/icon/github-dark.svg"
        }
      },
      {
        "command": "zennpad.renameNode",
        "title": "%command.zennpad.renameNode%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.duplicateNode",
        "title": "%command.zennpad.duplicateNode%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.deleteNode",
        "title": "%command.zennpad.deleteNode%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.insertImageFromFile",
        "title": "%command.zennpad.insertImageFromFile%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.flushPendingSync",
        "title": "%command.zennpad.flushPendingSync%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.deployToZenn",
        "title": "%command.zennpad.deployToZenn%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/publish-light.svg",
          "dark": "media/icon/publish-dark.svg"
        }
      },
      {
        "command": "zennpad.toggleAutoSync",
        "title": "%command.zennpad.toggleAutoSync%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.pauseAutoSync",
        "title": "%command.zennpad.pauseAutoSync%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/sync-on-light.svg",
          "dark": "media/icon/sync-on-dark.svg"
        }
      },
      {
        "command": "zennpad.resumeAutoSync",
        "title": "%command.zennpad.resumeAutoSync%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/sync-off-light.svg",
          "dark": "media/icon/sync-off-dark.svg"
        }
      },
      {
        "command": "zennpad.copyPath",
        "title": "%command.zennpad.copyPath%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.copyRelativePath",
        "title": "%command.zennpad.copyRelativePath%",
        "category": "ZennPad"
      },
      {
        "command": "zennpad.sortArticlesByDate",
        "title": "%command.zennpad.sortArticlesByDate%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/sort-by-title-light.svg",
          "dark": "media/icon/sort-by-title-dark.svg"
        }
      },
      {
        "command": "zennpad.sortArticlesByTitle",
        "title": "%command.zennpad.sortArticlesByTitle%",
        "category": "ZennPad",
        "icon": {
          "light": "media/icon/sort-by-date-light.svg",
          "dark": "media/icon/sort-by-date-dark.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node --test out/__tests__/*.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{src,docs}/**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.85.0",
    "@types/which": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "get-port": "^7.1.0",
    "http-proxy": "^1.18.1",
    "which": "^6.0.0",
    "yaml": "^2.8.2"
  }
}
