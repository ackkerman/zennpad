{
  "name": "zennpad",
  "displayName": "ZennPad",
  "publisher": "ackkerman",
  "description": "VS Code extension scaffold for editing Zenn content directly from the sidebar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zennPad",
          "title": "ZennPad",
          "icon": "media/logo-only-white.svg"
        }
      ]
    },
    "views": {
      "zennPad": [
        {
          "id": "zennPadExplorer",
          "name": "ZennPad"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "zennpad.refresh",
          "when": "view == zennPadExplorer",
          "group": "navigation@0"
        },
        {
          "command": "zennpad.authHelp",
          "when": "view == zennPadExplorer",
          "group": "navigation@1"
        }
      ],
      "editor/title": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        },
        {
          "command": "zennpad.linkCopy",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation@2"
        }
      ],
      "editor/title/context": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        },
        {
          "command": "zennpad.linkCopy",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "zennpad.publish",
          "when": "view == zennPadExplorer && viewItem == article:draft",
          "group": "inline"
        },
        {
          "command": "zennpad.unpublish",
          "when": "view == zennPadExplorer && viewItem == article:published",
          "group": "inline"
        },
        {
          "command": "zennpad.newArticle",
          "when": "view == zennPadExplorer && viewItem == articles",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "ZennPad",
      "properties": {
        "zennpad.githubOwner": {
          "type": "string",
          "default": "",
          "description": "GitHub owner (user or organization) for Zenn repository"
        },
        "zennpad.githubRepo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name for Zenn content"
        },
        "zennpad.githubBranch": {
          "type": "string",
          "default": "main",
          "description": "Branch name to sync with"
        }
      }
    },
    "commands": [
      {
        "command": "zennpad.newArticle",
        "title": "ZennPad: New Article",
        "icon": "media/icon/plus.svg"
      },
      {
        "command": "zennpad.publish",
        "title": "ZennPad: Publish Article",
        "icon": "media/icon/publish.svg"
      },
      {
        "command": "zennpad.unpublish",
        "title": "ZennPad: Unpublish Article",
        "icon": "media/icon/unpublish.svg"
      },
      {
        "command": "zennpad.openOnZenn",
        "title": "ZennPad: Open on Zenn",
        "icon": "media/logo-only.svg"
      },
      {
        "command": "zennpad.preview",
        "title": "ZennPad: Preview",
        "icon": {
          "light": "media/icon/preview-light.svg",
          "dark": "media/icon/preview-dark.svg"
        }
      },
      {
        "command": "zennpad.signIn",
        "title": "ZennPad: Sign in to GitHub",
        "icon": "media/icon/github.svg"
      },
      {
        "command": "zennpad.signOut",
        "title": "ZennPad: Sign out of GitHub",
        "icon": "media/icon/signout.svg"
      },
      {
        "command": "zennpad.authHelp",
        "title": "ZennPad: Settings",
        "icon": "media/icon/settings.svg"
      },
      {
        "command": "zennpad.chooseRepo",
        "title": "ZennPad: Choose GitHub Repository"
      },
      {
        "command": "zennpad.refresh",
        "title": "ZennPad: Refresh",
        "icon": "media/icon/refresh.svg"
      },
      {
        "command": "zennpad.linkCopy",
        "title": "ZennPad: Copy Zenn Article Link"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo 'No automated tests yet; run npm run compile to verify build'",
    "lint": "echo 'Linting is not configured yet'"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.85.0",
    "@types/which": "^3.0.4",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "get-port": "^7.1.0",
    "http-proxy": "^1.18.1",
    "which": "^6.0.0",
    "yaml": "^2.8.2"
  }
}
