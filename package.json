{
  "name": "zennpad",
  "displayName": "ZennPad",
  "publisher": "ackkerman",
  "description": "VS Code extension scaffold for editing Zenn content directly from the sidebar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zennPad",
          "title": "ZennPad",
          "icon": "media/logo-only-white.svg"
        }
      ]
    },
    "views": {
      "zennPad": [
        {
          "id": "zennPadExplorer",
          "name": "ZennPad"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "zennpad.preview",
          "when": "zennpad.activated && zennpad.activeTextEditorPreviewable",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "zennpad.newArticle",
        "title": "ZennPad: New Article"
      },
      {
        "command": "zennpad.publish",
        "title": "ZennPad: Publish Article"
      },
      {
        "command": "zennpad.unpublish",
        "title": "ZennPad: Unpublish Article"
      },
      {
        "command": "zennpad.openOnZenn",
        "title": "ZennPad: Open on Zenn"
      },
      {
        "command": "zennpad.preview",
        "title": "ZennPad: Preview",
        "icon": {
          "light": "media/icon/preview-light.svg",
          "dark": "media/icon/preview-dark.svg"
        }
      },
      {
        "command": "zennpad.refresh",
        "title": "ZennPad: Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo 'No automated tests yet; run npm run compile to verify build'",
    "lint": "echo 'Linting is not configured yet'"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.17",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.85.0",
    "@types/which": "^3.0.4",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "get-port": "^7.1.0",
    "http-proxy": "^1.18.1",
    "which": "^6.0.0",
    "yaml": "^2.8.2"
  }
}
